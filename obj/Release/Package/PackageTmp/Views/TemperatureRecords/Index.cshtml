@model IEnumerable<Temperature_Recording.Models.TemperatureRecord>

@{
    ViewBag.Title = "Home";
}

<h2>Temperature Record</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Temperature Reading
        </th>
        <th>
           Date Captured
        </th>
        <th>
           Fullnames
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TemperatureReading)
        </td>
